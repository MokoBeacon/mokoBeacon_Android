<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_5691fc">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/white_ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_info_transmission"
            android:textColor="@color/white_ffffff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/save" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/grey_ebebeb"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:text="@string/please_select_grade"
            android:textColor="@color/black_333333"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:id="@+id/ll_transmission_grade_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_0"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_0_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_1"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_1_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_2"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_2_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:id="@+id/ll_transmission_grade_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_3"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_3_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_4"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_4_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_5"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_5_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:id="@+id/ll_transmission_grade_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_6"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_6_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_7"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/transmission_grade_8_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_transmission_grade_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/shape_radius_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="8"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/transmission_grade_8"
                    android:textColor="@color/blue_5691fc"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transmission_grade_8_power"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/transmission_grade_8_range"
                    android:textColor="@color/grey_a6a6a6"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:text="@string/tips_transmission"
            android:textColor="@color/grey_737373"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>